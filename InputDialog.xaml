<Window x:Class="P5S_ceviri.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giriş" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered">
    <StackPanel Margin="15">
        <TextBlock x:Name="lblQuestion" Text="Soru:"/>
        <TextBox x:Name="txtAnswer" MinWidth="250" Margin="0,5,0,10"/>
        <WrapPanel HorizontalAlignment="Right">
            <Button IsDefault="True" Name="btnDialogOk" Click="btnDialogOk_Click" MinWidth="60" Margin="0,0,10,0">_Ok</Button>
            <Button IsCancel="True" MinWidth="60">_Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>